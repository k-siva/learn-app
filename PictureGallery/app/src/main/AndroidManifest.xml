<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asiablr.picturegallery" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GalleryMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalGallery"
            android:label="@string/title_activity_local_gallery"
            android:theme="@style/AppThemeDark"
            android:parentActivityName=".GalleryMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.asiablr.picturegallery.GalleryMain" />
        </activity>
    </application>

</manifest>
